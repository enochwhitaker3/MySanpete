@inject IOccasionService occasionService;

@if (Event is not null)
{
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <img width="300" src="@Event.PhotoURL" b class="img-fluid rounded-circle" />
            </div>
            <div class="col-md-6">
                <h2>@Event.Title</h2>
                <p>@Event.Description</p>
                <p>Put on by: @Event</p>

            </div>
        </div>

    </div>
}
else
{
    <p>The Occasion you are trying to see doens't exist</p>
}

@code {
    [Parameter]
    public int EventId { get; set; }

    public OccasionDTO Event { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        Event = await occasionService.GetOccasion(EventId);
    }

}
