@inject IVoucherService voucherService



<div class="main-section">
    <div class="content">
        <div class="title">
            Vouchers for all occasions.
        </div>
    </div>
    <img class="full-screen-image" src="Images/social_gathering.jpg" alt="Image">
    <div class="vouchers-content" style="max-width: 100vw; margin-left: auto; margin-right: auto; background-color:#fcfcf8; justify-content: center;">
        <div class="d-flex flex-row justify-content-center flex-wrap" style="max-width: 100vw;">
            <div >
                <a href="#">
                    <img class="business-logo"
                         style="height: 130px; width: 130px; border-radius: 65px; object-fit: cover; object-position: center; margin: 20px;"
                         src="https://s3-media0.fl.yelpcdn.com/bphoto/1MqOD2pSfkk3SnMhI3wWQQ/348s.jpg" />
                </a>
            </div>
            <div>
                <a href="#">
                    <img class="business-logo"
                         style="height: 130px; width: 130px; border-radius: 65px; object-fit: cover; object-position: center; margin: 20px;"
                         src="https://lh3.googleusercontent.com/p/AF1QipNhVuRpQ0ShYKi0HPDze9Ny49ymiUzoPDb-DPP0=s680-w680-h510" />
                </a>
            </div>
            <div>
                <a href="#">
                    <img class="business-logo"
                         style="height: 130px; width: 130px; border-radius: 65px; object-fit: cover; object-position: center; margin: 20px;"
                         src="https://asset.brandfetch.io/idPvg-ka_0/idKNuyVmpf.jpeg" />
                </a>
            </div>
            <div>
                <a href="#">
                    <img class="business-logo"
                         style="height: 130px; width: 130px; border-radius: 65px; object-fit: cover; object-position: center; margin: 20px;"
                         src="https://asset.brandfetch.io/idPvg-ka_0/idKNuyVmpf.jpeg" />
                </a>
            </div>
            <div>
                <a href="#">
                    <img class="business-logo"
                         style="height: 130px; width: 130px; border-radius: 65px; object-fit: cover; object-position: center; margin: 20px;"
                         src="https://asset.brandfetch.io/idPvg-ka_0/idKNuyVmpf.jpeg" />
                </a>
            </div>
        </div>

        @if (allVouchers is not null)
        {
            @foreach (var voucher in allVouchers)
            {
                <div class="col-md-6" style="width:750px;">
                    <div class="card m-2 rounded-5">
                        <div class="d-flex flex-row">
                            <div class="col-md img-square-wrapper rounded" style="padding: 0px;">
                                <img class=""
                                     style="height: 100%; object-fit: cover; object-position: center;"
                                     src="https://fastly.picsum.photos/id/16/2500/1667.jpg?hmac=uAkZwYc5phCRNFTrV_prJ_0rP0EdwJaZ4ctje2bY7aE" alt="Staging Photo" width="200" />
                            </div>
                            <div class="col-md card-body">
                                <h2 class="card-title" style="font-family: Nelphim !important;">Buy One Get One on All Cookies and Cupcakes</h2>
                                <p class="card-text">Good through 10-01-2024</p>
                                <!-- Button trigger modal -->
                                <a class="btn-snow" data-toggle="modal" data-target="#exampleModalLong">Purchase</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="alert alert-info">
                <p>Sorry No Vouchers At This Point</p>
            </div>

        }
    </div>
</div>





@code {
    public List<VoucherDTO> allVouchers { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        allVouchers = await voucherService.GetAllVouchers();
    }

}
